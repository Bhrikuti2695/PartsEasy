<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B30808">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for Product, Brands, Part Number"
            android:background="#ffff"
            android:layout_margin="6dp"
            android:padding="4dp"/>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B30808"
        app:tabTextColor="#ffff"
        app:tabIndicatorColor="#ffff">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auger Drun and Gear Case"
            />


        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrical and Switch" />


    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auger Drun and Chain"
                android:id="@+id/augerdrum"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Threshing Frame"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Second Vertical Auger Shaft"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Harvest Frame and Tension Arm"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>

        </LinearLayout>

    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/border"
        android:layout_margin="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B30808"
        android:layout_margin="4dp"
        android:padding="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by Part No."
            android:textSize="16dp"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:background="#ffff"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Search"
            android:layout_gravity="right"
            android:background="#ffff"
            android:textColor="#B30808"
            android:padding="4dp"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B30808"
        android:layout_margin="4dp"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLICK TO ORDER"
            android:drawableLeft="@drawable/ic_baseline_camera_alt_24"
            android:drawablePadding="4dp"
            android:textSize="16dp"
            android:textColor="#615D5D"
            android:textStyle="bold"
            android:background="#ffff"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Upload your parts list)"
            android:textSize="14dp"
            android:textColor="#615D5D"
            android:background="#ffff"
            android:padding="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B30808"
        android:layout_margin="4dp"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALL TO ORDER"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:drawablePadding="4dp"
            android:textSize="16dp"
            android:textColor="#615D5D"
            android:textStyle="bold"
            android:background="#ffff"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Just call us, we will deliver you)"
            android:textSize="14dp"
            android:textColor="#615D5D"
            android:background="#ffff"
            android:padding="4dp"
            />
    </LinearLayout>
</LinearLayout>

</ScrollView>