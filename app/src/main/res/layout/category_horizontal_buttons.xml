<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
     android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRACK ASSEMBLY"
                android:id="@+id/btn_track_assembly"
                android:textColor="#ffff"
                android:background="#B30808"
                android:layout_margin="2dp"
                android:padding="4dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELECTRIC AND ELECTRONIC PART"
                android:id="@+id/btn_electric"
                android:textColor="#ffff"
                android:background="#B30808"
                android:layout_margin="2dp"
                android:padding="4dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HYDRALIC AND DISESEL TANK"
                android:id="@+id/btn_hydralic"
                android:textColor="#ffff"
                android:background="#B30808"
                android:layout_margin="2dp"
                android:padding="4dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUGER AND TRAVER DRIVE, BRACES"
                android:id="@+id/btn_auger"
                android:textColor="#ffff"
                android:background="#B30808"
                android:layout_margin="2dp"
                android:padding="4dp"/>
        </LinearLayout>

    </LinearLayout>


</HorizontalScrollView>