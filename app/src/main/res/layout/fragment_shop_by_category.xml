<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".ui.ReportCard.ReportCardFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <include
       layout="@layout/category_horizontal_buttons"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/track_assembly_layout"
            android:visibility="gone"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Drive and Idle Assy"
                android:id="@+id/trackdriver"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Track Mount Assy"
                android:id="@+id/trackmount"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/Electric_and_layout"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battery Box"
                android:id="@+id/batterybox"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Front and rear Junction Box"
                android:id="@+id/junctionbox"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Circuit Selector Switch"
                android:id="@+id/circuitswitch"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/Hydraulic_layout"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hydraulic Tank"
                android:id="@+id/hydraulic"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diesel Tank and Diesel spray"
                android:id="@+id/diesel_tank"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/auger_layout"
            android:visibility="gone"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auger Drive and Main Shaft"
                android:id="@+id/auger"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transverse Beam Assembly"
                android:id="@+id/transverse"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bearing Mousing Assy"
                android:id="@+id/bearing_mousing"
                android:background="@drawable/border"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:padding="4dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/bottom_items">
<include layout="@layout/bottomsheet_layout"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>